extends login-base.pug

mixin page(title, url)
    //- tags can be inlined with the #[] syntax
    li #[a(href= url)= title]

//- this block will overwrite what is in template.pug
block body
    .d-flex.flex-column.flex-fill
        .alloya-welcome
            h2 How can we simplify your life today?

        .alloya-tiles
            .transaction-card
                .transaction-row
                    div Transactions
                    img(src='img/transactions-watermark.png')
            .liquidity-card
                .transaction-row
                    div Liquidity
                    img(src='img/liquidity-watermark.png')
            .investments-card
                .transaction-row
                    div Investments
                    img(src='img/investments-watermark.png')


        .alloya-login
            .col-container
                .alloya-logo
                    img(src="img/alloya-logo.png", alt="Alloya Corporate Federal Credit Union", aria-hidden="true")
                .sub-text 
                    +ipsum(35)

            form(action="", method="post").vertical-form
                h1 Login
                .field
                    input(type="text", id="username", name="username", required)
                    label.elevate(for="username") Email Address
                .field
                    input(type="password", id="password", name="password", required)
                    label.elevate(for="password") Password
                .login-options
                    .field
                        input(type="checkbox", id="rememberme", name="rememberme", required)
                        label(for="rememberme") Remember Me
                    .field
                        a(href="/ForgotPassword") Forgot Password?
                .field
                    input(type="submit", name="login", value="Login").btn.btn-primary

    